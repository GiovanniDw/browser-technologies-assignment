{% extends  'base.njk' %}
{% block  content %}
  <section class="form-container">
    <h3>Continue the Survey?</h3>
    <form action='/login' method="POST" enctype="multipart/form-data">
      {% if error %}
        error{{ error }}
      {% endif %}
  {% if message %}
        message {{ message }}
      {% endif %}
      <label class="input-group" for='email'>
        School Email
        <input
          pattern=".+@hva\.nl" title="Please provide only @hva.nl email address"
          type='email'
          name='username'
          id='username'
          placeholder='your.email@hva.nl'
          required
          autocomplete='email'></label>
        <button type='submit'>login</button>
      </form>
      <div class='redirect'>
        <p>First time here?</p>
        <a href='/register'>
          <small>Start the Survey</small>
        </a>
      </div>
    </section>
  {% endblock %}